        <TextView
            android:id="@+id/downloadCompanyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Download Full Policy Documents"
            android:textColor="#049bb8"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/companyPolicyImage"
            app:layout_constraintStart_toStartOf="@id/companyPolicyImage"
            app:layout_constraintTop_toBottomOf="@id/companyPolicyImage" />

        <LinearLayout
            android:id="@+id/llTermsConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/downloadCompanyPolicy"
            app:layout_constraintStart_toStartOf="@id/downloadCompanyPolicy"
            app:layout_constraintTop_toBottomOf="@id/downloadCompanyPolicy">

            <CheckBox
                android:id="@+id/checkTermsConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textTermsConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="I agree with the Terms and Conditions"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/llTermsConditions"
            app:layout_constraintTop_toBottomOf="@id/llTermsConditions">

            <CheckBox
                android:id="@+id/checkPrivacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="I agree with"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Privacy Policy"
                android:textColor="#049bb8"
                android:textSize="11sp" />

        </LinearLayout>

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:id="@+id/signaturePad"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llPrivacyPolicy" />

