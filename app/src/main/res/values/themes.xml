<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Screens" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ibs_app_theme</item>
        <item name="colorPrimaryVariant">@color/ibs_app_theme</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        //  pinView
        <item name="pinViewStyle">@style/PinWidget.PinView</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
    </style>

    <!-- SearchView hint. -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13.5sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/button_gradient_background</item>
    </style>

    <style name="CircularPresentProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/present_progress_bar_circle</item>
    </style>

    <style name="CircularAbsentProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/absent_progress_bar_circle</item>
    </style>

    //  pinView
    <style name="PinWidget.PinView">
        <item name="android:textSize">20sp</item>
        <item name="itemBackground">@color/transparent</item>
        <item name="background">@drawable/pin_view_background</item>
    </style>

    <style name="MonthPickerDialogStyle" >
<!--        <item name="monthBgColor">@color/bgColor</item>-->
<!--        <item name="monthBgSelectedColor">@color/ibs_app_theme</item>-->
        <item name="monthFontColorSelected">@color/ibs_app_theme</item>
        <item name="monthFontColorNormal">@color/ibs_app_theme</item>
        <item name="monthFontColorDisabled">@color/ibs_app_theme</item>

        <item name="headerBgColor">@color/ibs_app_theme</item>
<!--        <item name="headerFontColorSelected">#fff</item>-->
<!--        <item name="headerFontColorNormal">#85FFFFFF</item>-->
<!--        <item name="headerTitleColor">#fff</item>-->
        <item name="dialogActionButtonColor">@color/ibs_app_theme</item>
    </style>

</resources>